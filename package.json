{
   "name": "server",
   "version": "0.0.1",
   "private": true,
   "scripts": {
      "build": "tsc && yarn copy-gql",
      "copy-gql": "copy-and-watch src/**/*.{gql,graphql} build/src",
      "lint": "eslint '*/**/*.{js,ts,json}' --fix",
      "prestart": "yarn build",
      "start": "concurrently --names compile,server,cp-gql  \"tsc --watch\" \"nodemon -w build --exec yarn start:production\" \"yarn copy-gql --watch\" ",
      "start:production": "node build/src/index.js"
   },
   "dependencies": {
      "dotenv": "^8.2.0",
      "glob": "^7.1.6",
      "graphql-yoga": "^1.18.3",
      "merge-graphql-schemas": "^1.7.8",
      "pg": "^8.3.0",
      "reflect-metadata": "^0.1.10",
      "typeorm": "^0.2.25"
   },
   "devDependencies": {
      "@types/node": "^8.0.29",
      "@typescript-eslint/eslint-plugin": "^3.8.0",
      "@typescript-eslint/parser": "^3.8.0",
      "concurrently": "^5.3.0",
      "copy-and-watch": "^0.1.5",
      "eslint": "^7.6.0",
      "eslint-config-prettier": "^6.11.0",
      "eslint-plugin-prettier": "^3.1.4",
      "nodemon": "^2.0.4",
      "prettier": "^2.0.5",
      "ts-node": "3.3.0",
      "typescript": "3.9.2",
      "typescript-eslint": "^0.0.1-alpha.0"
   }
}
