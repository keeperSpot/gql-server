
{
   "compilerOptions": {
      "baseUrl": "./src",
      "lib": [
         "es5",
         "es6",
         "esnext",
         "dom"
      ],
      "resolveJsonModule": true,
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true
   }
}
